<function name="lifting">
<inputs>
<pipe id="oneXML" paramType="variable" />
<key id="URI" paramType="variable" required="true"/>
</inputs>
<execute> <![CDATA[
var oneJSON= y.xmlToJson(oneXML);
var oneJSONLD={'@context':{'owl': 'http://www.w3.org/2002/07/owl#',
 'foaf': 'http://xmlns.com/foaf/0.1/'}};
oneJSONLD['@id']= URI;
oneJSONLD['@type']='foaf:Person';
//http://dblp.l3s.de/d2r/page/authors/O._D%C3%ADaz
A1='http://dblp.l3s.de/d2r/resource/'+oneJSON.name;
A2='http://www.bibsonomy.org/author/'+oneJSON.name;
A3='http://rdf.onekin.org/googlescholar/author/'+oneJSON.name;
oneJSONLD['owl:sameAs']=[A1, A2, A3];
response.object = oneJSONLD;
]]>
</execute>          
</function>     
     </bindings>
